<h2>Create a new account</h2>
  <%= form_for(:user, url: signup_path) do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>

    <%# f.label :email %>
    <%# f.email_field :email %>

    <%= f.label :password %><br>
    <%= f.password_field :password %><br>

    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %><br><br>

    <%= f.submit "Sign up"%>
  <% end %>